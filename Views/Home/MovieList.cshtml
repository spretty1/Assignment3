@{
    ViewBag.Title = "Movie List";
}
@model IEnumerable<Assignment3.Models.MovieCollection>

<div>
    <h2>Here are the movies currently in the collection</h2>

    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To</th><th>Notes</th></tr>
        </thead>
        <tbody>
            <!--loop to create the table to display all except independence day-->
            @foreach (Assignment3.Models.MovieCollection x in Model)
            {   
                @if (x.Title.ToUpper() == "INDEPENDENCE DAY")
                {
                    //skips adding it to the display
                }

                else
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edited</td>
                        <td>@x.LentTo</td>
                        <td>@x.Notes</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
